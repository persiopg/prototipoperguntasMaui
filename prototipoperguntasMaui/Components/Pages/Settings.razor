@page "/settings"
@using prototipoperguntasMaui.Services
@using Microsoft.Maui.Controls
@using Microsoft.Maui
@inject AppStateService AppState
@inject NavigationManager Nav

<div class="mobile-container flex flex-col min-h-screen p-5">
    <div class="mb-8 mt-2 px-1 fade-in">
        <h2 class="text-2xl font-black text-slate-800 tracking-tight">Configurações</h2>
        <p class="text-sm text-slate-500 font-bold uppercase tracking-wider">Gerenciar conta</p>
    </div>

    <div class="flex-grow">
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 mb-4">
            <div class="flex items-center gap-4 mb-4">
                <div class="w-16 h-16 rounded-full bg-slate-100 flex items-center justify-center text-slate-400 text-2xl">
                    <i class="fa-solid fa-user"></i>
                </div>
                <div>
                    <h3 class="font-bold text-slate-800">@AppState.Meta.User.Name</h3>
                    <p class="text-xs text-slate-400 font-mono">@AppState.Meta.User.Uuid</p>
                </div>
            </div>
            
            <div class="space-y-3">
                 <div class="flex justify-between items-center py-2 border-b border-slate-50">
                    <span class="text-xs font-bold text-slate-500 uppercase">Perfil</span>
                    <span class="text-xs font-bold text-slate-800">@AppState.Meta.User.Role</span>
                </div>
                 <div class="flex justify-between items-center py-2 border-b border-slate-50">
                    <span class="text-xs font-bold text-slate-500 uppercase">Ciclo</span>
                    <span class="text-xs font-bold text-slate-800">@AppState.Meta.Cycle.Id</span>
                </div>
                 <div class="flex justify-between items-center py-2">
                    <span class="text-xs font-bold text-slate-500 uppercase">Versão App</span>
                    <span class="text-xs font-bold text-slate-800">@AppState.Meta.Device.AppVersion</span>
                </div>
            </div>
        </div>
    </div>
    <div>
         <button @onclick="Logout" class="w-full bg-red-50 text-red-500 font-bold py-4 rounded-xl border border-red-100 flex items-center justify-center gap-2 hover:bg-red-500 hover:text-white transition-colors">
        <i class="fa-solid fa-power-off"></i> SAIR DA CONTA
    </button>
    </div>
   
</div>

@code {
    private void Logout()
    {
        AppState.Logout();
        if (Application.Current != null)
        {
             Application.Current.MainPage = new MainPage(); 
        }
    }
}
