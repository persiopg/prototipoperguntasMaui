<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Maui;assembly=Microsoft.AspNetCore.Components.WebView.Maui"
    xmlns:components="clr-namespace:prototipoperguntasMaui.Components.Pages;assembly=prototipoperguntasMaui"
    x:Class="prototipoperguntasMaui.MauiPages.MapPage"
    Shell.NavBarIsVisible="False">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Voltar" Order="Primary" Priority="0" Clicked="OnBackClicked" />
    </ContentPage.ToolbarItems>

    <!-- Host the existing Blazor Map component inside a native page so Shell navigation lifecycle (OnAppearing/OnDisappearing) works reliably -->
    <blazor:BlazorWebView x:Name="BlazorHost" HostPage="wwwroot/index.html">
        <blazor:BlazorWebView.RootComponents>
            <blazor:RootComponent Selector="#app" ComponentType="{x:Type components:Map}" />
        </blazor:BlazorWebView.RootComponents>
    </blazor:BlazorWebView>

</ContentPage>